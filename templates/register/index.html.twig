{% extends 'base.html.twig' %}

{% block title %}S'enregistrer{% endblock %}    

{% block body %}
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-lg-12 col-xl-11">
            <div class="card text-black" style="border-radius: 25px;">
                <div class="card-body p-md-5">
                    <div class="row justify-content-center">
                        <div class="col-md-12">
                            <p class="text-center h2 fw-bold mb-5 mx-1 mx-md-4 mt-4">Cr√©er un compte</p>
                            {{ form_start(register_form) }}
                            {{ form_errors(register_form) }}
                            <div class="d-flex flex-row align-items-center mb-4">
                                <div class="form-outline flex-fill mb-0"> 
                                    {{ form_widget(register_form.lastname) }}                            
                                    {{ form_errors(register_form.lastname) }}
                                </div>
                            </div>
                            <div class="d-flex flex-row align-items-center mb-4">
                                <div class="form-outline flex-fill mb-0">
                                    {{ form_widget(register_form.firstname) }}                            
                                    {{ form_errors(register_form.firstname) }}
                                </div>
                            </div>
                            <div class="d-flex flex-row align-items-center mb-4">
                                <div class="form-outline flex-fill mb-0">
                                    {{ form_widget(register_form.email) }}                            
                                    {{ form_errors(register_form.email) }}
                                </div>
                            </div>
                            <div class="d-flex flex-row align-items-center mb-4">
                                <div class="form-outline flex-fill mb-0">
                                    {{ form_widget(register_form.password) }}                            
                                    {{ form_errors(register_form.password) }}
                                </div>
                            </div>
                            <div class="form-check d-flex justify-content-center mb-4">
                                
                                {{ form_widget(register_form.tos) }}                            
                                {{ form_label(register_form.tos) }}
                                {{ form_errors(register_form.tos) }}
                            </div> 
                            {{ form_end(register_form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}