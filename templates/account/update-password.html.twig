{% extends 'base.html.twig' %}

{% block title %}Mettre Ã  jour votre mot de passe{% endblock %}

{% block body %}
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12">
            <div class="card text-black" style="border-radius: 8px;">
                <div class="card-body p-md-5">
                    <h2 class="mt-3">Modifier mon mot de passe</h2> 
                    <br />
                    <p><a href="{{ path('back_account') }}">Retour</a></p>
                    <br />
                    {% if(notif_message) %}
                        <p class="alert alert-info" role="alert">{{ notif_message }}</p>
                    {% endif %}
                    {{ form_start(update_password_form) }}
                    {{ form_errors(update_password_form) }}
                    <div class="d-flex flex-row align-items-center mb-4">
                        <div class="form-outline flex-fill mb-0"> 
                            {{ form_widget(update_password_form.lastname) }}                            
                            {{ form_errors(update_password_form.lastname) }}
                        </div>
                    </div>
                    <div class="d-flex flex-row align-items-center mb-4">
                        <div class="form-outline flex-fill mb-0">
                            {{ form_widget(update_password_form.firstname) }}                            
                            {{ form_errors(update_password_form.firstname) }}
                        </div>
                    </div>
                    <div class="d-flex flex-row align-items-center mb-4">
                        <div class="form-outline flex-fill mb-0">
                            {{ form_widget(update_password_form.email) }}                            
                            {{ form_errors(update_password_form.email) }}
                        </div>
                    </div>
                    <div class="d-flex flex-row align-items-center mb-4">
                        <div class="form-outline flex-fill mb-0">
                            {{ form_widget(update_password_form.old_password) }}                            
                            {{ form_errors(update_password_form.old_password) }}
                        </div>
                    </div>
                    <div class="d-flex flex-row align-items-center mb-4">
                        <div class="form-outline flex-fill mb-0">
                            {{ form_widget(update_password_form.new_password) }}                            
                            {{ form_errors(update_password_form.new_password) }}
                        </div>
                    </div>
                    {{ form_end(update_password_form) }}
                </div>
            </div>
        </div>
        </div>
    </div>
{% endblock %}